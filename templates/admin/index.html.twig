{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        .disabled {
            pointer-events: none;
            cursor: default;
            text-decoration-style: unset;
            background-color: gray;
        }

        a, a:hover, a:visited, a:active {
            color: inherit;
            text-decoration: none;
        }

        a {
            width: 30px;
            height: 30px;
            border: 1px solid gray;
            display: block;
            float: left;
            text-align: center;
            margin-right: 10px;
        }
    </style>

    <div class="example-wrapper">
        <table width="100%">
            <thead>
            <td>URL</td>
            <td>Visits</td>
            <td>Last visit date</td>
            </thead>
            {% for record in records %}
                <tr>
                    <td>{{ record.url }}</td>
                    <td>{{ record.visit_count }}</td>
                    <td>{{ record.last_time }}</td>
                </tr>
            {% endfor %}
        </table>
        <p>
            {% for page in 1..page_count %}
                <a href="{{ path('app_admin',{page:page-1}) }}"
                   class="{{ page-1==current_page?'disabled':'' }}">{{ page }}</a>
            {% endfor %}
        </p>
    </div>
{% endblock %}
